<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/activity_cbir"
android:layout_width="match_parent"
android:layout_height="match_parent"

tools:context="com.example.rosannacatte.cbirsoftwarever2.Cbir">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scegli un descrittore"
        android:layout_marginTop="0dp"
        android:layout_below="@+id/sad_smile_image_view"
        android:textStyle="bold"
        android:layout_alignParentStart="true" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="1.03"
        android:orientation="vertical"
        android:checkedButton="@id/istogramma"
        android:id="@+id/groupDescrittoreIstogramma"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/imagesList"
        android:layout_alignParentStart="true">

        <RadioButton
            android:id="@+id/descrittoreIstogramma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onRadioButtonClicked"
            android:text="Istogramma" />

        <RadioButton
            android:id="@+id/descrittoreLbp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_toEndOf="@+id/sad_smile_image_view"
            android:onClick="onRadioButtonClicked"
            android:text="Local Binary Pattern" />

        <RadioButton
            android:id="@+id/descrittoreEntrambi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_toEndOf="@+id/sad_smile_image_view"
            android:onClick="onRadioButtonClicked"
            android:text="Entrambi" />


    </RadioGroup>

    <ImageView
    android:id="@+id/sad_smile_image_view"
    android:src="@mipmap/ic_sentiment_dissatisfied_black_48dp"
    android:layout_marginBottom="16dp"
    android:layout_above="@id/insert_query_image_text_view"
    android:layout_centerInParent="true"
    android:layout_width="48dp"
    android:layout_height="48dp"
    android:visibility="gone"
    />

<android.support.design.widget.FloatingActionButton
    android:id="@+id/insert_query_image_button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_alignParentRight="true"
    android:src="@mipmap/ic_image_white_24dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="16dp"
    />

<ListView
    android:padding="0dp"
    android:layout_margin="0dp"
    android:visibility="gone"
    android:id="@+id/imagesList"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

</ListView>

    <TextView
        android:id="@+id/insert_query_image_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seleziona un'immagine!"
        android:textStyle="bold"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/groupDescrittoreIstogramma"
        android:layout_alignParentStart="true" />

</RelativeLayout>